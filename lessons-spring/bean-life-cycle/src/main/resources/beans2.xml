<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-init-method="globalCustomInit"
       default-destroy-method="globalCustomDestroy">

    <bean id="awareBean" class="example2.AwareBeanImpl"/>
    <bean id="book" class="example2.Book"
          p:bookName="Yo Yertas"
          init-method="customInit"
          destroy-method="customDestroy"/>
    <bean id="bookBean" class="example2.BookBean"
          p:bookName="Унесенные ветром"/>
    <bean id="bookBeanPostProcessor" class="example2.BookBeanPostProcessor"/>
</beans>
